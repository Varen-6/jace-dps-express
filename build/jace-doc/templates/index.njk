{% extends "layout.njk" %}

{% block content %}
  
  <div class="markdown-body">
    
    
    {{ content | safe }}
  </div>
  
  <ul class="table-of-content">
    {% for page in frontMatter.refs.items %}
      <li class="my-2 py-3 bg-black text-white rounded-xl text-center blinking">
        <a href="{{ page.url }}">
          {{ page.title }}
        </a>
      </li>
    {% endfor %}
  </ul>

{% endblock %}
